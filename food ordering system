import java.util.*;
public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int total=0;
        System.out.println(" Biryani - 150");
        System.out.println(" Coffee - 80");
        System.out.println(" French Fries - 50");
        while(true){

        System.out.println();
        int num = sc.nextInt();

            switch (num) {
                case 1: System.out.println("Biryani");
                    total = total + 150;

                    System.out.println("Total Is : "+total);
                    break;
                case 2: System.out.println("Coffee");
                    total = total + 80;
                    System.out.println("Total Is : "+total);
                    break;
                case 3: System.out.println("French Fries");
                    total = total + 50;
                    System.out.println("Total Is : "+total);
                    break;
                case 4: System.out.println("Application Exit");
                    System.out.println("Total Bill  : "+total);
                    break;
                default: System.out.println("Invalid item");
            }
        }
    }
}
